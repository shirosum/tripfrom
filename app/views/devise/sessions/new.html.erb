<body id="body">
	<div class="container">
		<div class="row">
			<div class="col">
				<h2 class="text-center">Log in</h2>

				<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				<div class="field text-center">
					<span> <i class="fa fa-user"></i> </span>
					<%= f.text_field :user_name, autofocus: true, placeholder: " Nick name" %>
				</div>


				<div class="field text-center">
					<span> <i class="fa fa-lock"></i> </span>
					<%= f.password_field :password, autocomplete: "current-password", placeholder: " Password" %>
				</div>

				<% if devise_mapping.rememberable? %>
					<div class=" text-center">
					<%= f.check_box :remember_me %>
					<%= f.label :remember_me %>
					</div>
				<% end %>

				<div class="actions text-center">
					<%= f.submit "Log in", class: "btn btn-default" %>
				</div>
				<% end %>
				<p class="text-center">Haven't an account? <%= link_to "Sign up", new_user_registration_path, class: "btn" %></p>
				<p class="text-center"><%= link_to "Forgot your password?", new_user_password_path, class: "btn" %></p>
			</div>
		</div>
	</div>
</body>