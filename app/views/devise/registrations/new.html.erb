		<body class="bodysignup">
			<div class="container">
				<div class="row">
					<div class="col">
						<h2 class="text-center new-users-headline">新規会員登録</h2>
						<div>
							<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
							<%= render "devise/shared/error_messages", resource: resource %>
						</div>
						<div class="field text-center">
							<span> <i class="fa fa-user"></i> </span>
							<%= f.text_field :user_name, autofocus: true, placeholder: " Nick name" %>
						</div>
						<div class="field text-center">
							<span> <i class="fa fa-envelope"></i> </span>
							<%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:" Email address" %>
						</div>

						<div class="field text-center">
							<span> <i class="fa fa-lock"></i> </span>
							<%= f.password_field :password, autocomplete: "new-password", placeholder: " 6 characters minimum" %>
						</div>

						<div class="field text-center">
							<span> <i class="fa fa-lock"></i> </span>
							<%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: " Repeat password" %>
						</div>

						<div class="actions text-center">
							<%= f.submit "Sign up", class: "btn btn-default" %>
						</div>
						<% end %>
						<p class="text-center">Have an account?<%= link_to "Log in", new_user_session_path, class: "btn" %></p>
					</div>
				</div>
			</div>
		</body>