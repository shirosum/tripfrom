		<body id="body">
			<div class="container">
				<div class="row">
					<h2 class="text-center new-users-headline">Sign Up</h2>
					<div class="text-center">
						<%= render "devise/shared/error_messages", resource: resource %>
					</div>
					<div class="text-center">
						<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
							<div class="field">
								<span><i class="fa fa-user"></i></span>
								<%= f.text_field :user_name, autofocus: true, placeholder: " Nick name"%>
							</div>
							<div class="field">
								<span> <i class="fa fa-envelope"></i> </span>
								<%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:" Email address" %>
							</div>
							<div class="field">
								<span> <i class="fa fa-lock"></i> </span>
								<%= f.password_field :password, autocomplete: "new-password", placeholder: " 6 characters minimum" %>
							</div>
							<div class="field">
								<span> <i class="fa fa-lock"></i> </span>
								<%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: " Repeat password" %>
							</div>
							<div class="actions">
								<%= f.submit "Sign up", class: "btn btn-default" %>
							</div>
						<% end %>
						<p>Have an account?<%= link_to "Log in", new_user_session_path, class: "btn" %></p>
					</div>
				</div>
			</div>
		</body>