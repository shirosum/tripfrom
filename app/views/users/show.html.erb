
<div class="container">
    <div class="row">
        <div>
            <% if current_user.admin? %>

            <% else %>
            <h3 class="user-name">
                <%= link_to edit_user_path(@user) do %>
                    <%= @user.user_name %>
                <% end %>
            </h3>
            <div class="avatar">
                <%= form_with model: @user, local: true do |f| %>
                    <% if @user.avatar.attached? %>
                        <%= image_tag @user.avatar, :size => "200x200" %>
                    <% else %>
                        <%= image_tag 'img/no_image_user.png', :size => "200x200" %>
                    <% end %>
                <% end %>
            </div>
            <div class="follow">
                <div class="follow_form"><%= render 'follow_form' %></div>
                <div class="stats"><%= render 'stats' %></div>
            </div>
            <h4>captures</h4>
            <div class="user-posts">
                <% @posts.each do |post| %>
                    <%= link_to post_path(post.id) do %>
                        <% if post.captures.attached? %>
                            <% post.captures.each do |capture| %>
                                <%= image_tag capture %>
                            <% end %>
                        <% end %>
                    <% end %>
                <% end %>
            </div>
            <% end %>
        </div>
    </div>
</div>