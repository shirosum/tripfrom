<div class="container">
    <div class="row">
        <div>
            <h4>posts index</h4>
            <% @posts.each do |post| %>
                <% if post.captures.attached? %>
                    <% post.captures.each do |capture| %>
                        <%= image_tag capture %>
                    <% end %>
                <% end %>
                <br><%= post.nation.nation_name %>
                <br><%= post.caption %>
            <% end %>
        </div>
    </div>
</div>