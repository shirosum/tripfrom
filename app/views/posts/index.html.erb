<div class="container">
    <div class="row">
        <div class="col-xs-3">
            <nav class="nav sidebar-nav affix" role="complementary">
            <% if user_signed_in? %>
                <% unless current_user.admin? %>
                    <%= render 'users/user_info', user: current_user, post: @post %>
                <% end %>
            <% end %>
            </nav>
        </div>
        <div class="col-xs-9">
            <h4>posts index</h4>
            <% @posts.each do |post| %>
                <%= link_to user_path(post.user) do %>
                    <%= post.user.user_name %><br>
                <% end %>
                <%= link_to post_path(post) do %>
                    <% if post.captures.attached? %>
                        <% post.captures.each do |capture| %>
                            <%= image_tag capture %>
                        <% end %>
                    <% end %>
                <% end %>
                    <br><%= post.nation.nation_name %>
                    <br><%= post.caption %>
                    <div id="likes_buttons_<%= post.id %>">
                        <%= render partial: 'likes/like', locals: { post: post, likes: @likes } %>
                    </div>
            <% end %>
        </div>
    </div>
</div>